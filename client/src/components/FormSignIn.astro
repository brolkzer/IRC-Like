<form action="" method="POST" id="signInForm">
  <input
    type="text"
    name="username"
    autocomplete="off"
    placeholder="Enter username"
    id="signInUsername"
  />
  <p id="signInUsernameError"></p>
  <input
    type="password"
    name="password"
    autocomplete="off"
    placeholder="Enter password"
    id="signInPassword"
  />
  <p id="signInPasswordError"></p>
  <input type="submit" name="signIn" value="Sign In" id="signInSubmit" />
  <button onclick="window.location.href = '/signUp'">
    Don't have an account ? Sign Up here !
  </button>
</form>

<style lang="scss">
  form {
    display: grid;
    grid-template-rows: auto auto auto;
    justify-content: center;
    gap: 1rem;

    p {
      color: crimson;
    }

    input {
      padding: 0.5rem 0.75rem;
      width: 30vw;
    }

    input[type="text"],
    input[type="password"] {
      &:focus,
      &:focus-visible {
        outline: none;
        border: 1px solid red;
      }
    }

    input[type="submit"] {
      cursor: pointer;
      background-color: black;
      color: white;
      font-size: 14px;
      font-weight: 600;
    }
    button {
      cursor: pointer;
      display: grid;
      grid-template-rows: auto;
      justify-content: center;
      padding: 0.5rem 0.75rem;
      width: 30vw;
      background: #3cba92;
      border: 1px solid #3cba92;
      color: black;
      font-size: 16px;
      font-weight: 500;
    }
    @media screen and (max-width: 450px) {
      button {
        font-size: 12px;
      }
    }
  }
</style>

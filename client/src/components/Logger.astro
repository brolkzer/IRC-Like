<script>
  import Cookies from "js-cookie";

  if (Cookies.get("IRCToken")) {
    let logger = (document.getElementById("logger") as HTMLDivElement | null)
      ?.style;
    if (logger != undefined) logger.display = "none";

    let logged = (document.getElementById("logged") as HTMLDivElement | null)
      ?.style;
    if (logged != undefined) logged.display = "grid";
  } else {
    let logger = (document.getElementById("logger") as HTMLDivElement | null)
      ?.style;
    if (logger != undefined) logger.display = "grid";

    let logged = (document.getElementById("logged") as HTMLDivElement | null)
      ?.style;
    if (logged != undefined) logged.display = "none";
  }

  const logOutButton = document.getElementById("logOutButton");
  if (logOutButton) {
    logOutButton.addEventListener("click", () => {
      Cookies.remove("IRCToken");
      window.location.href = "/";
    });
  }
</script>
<div class="logger" id="logger">
  <button onclick="window.location.href = '/signIn'">Se connecter</button>
  <a href="/signUp">Pas de compte ? Incrivez-vous !</a>
</div>
